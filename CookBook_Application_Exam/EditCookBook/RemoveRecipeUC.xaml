<UserControl x:Class="CookBook_Application_Exam.EditCookBook.RemoveRecipeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CookBook_Application_Exam.EditCookBook"
             mc:Ignorable="d" FontSize="30"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://shorturl.at/twFG7"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Please enter the Recipe Title: "/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="RecipeTitleTextBox" Width="650" Height="40" Background="Transparent"/>
                <Button Content="Search" Width="150" Click="SearchButton_Click"/>
            </StackPanel>
        </StackPanel>


    </Grid>
</UserControl>
